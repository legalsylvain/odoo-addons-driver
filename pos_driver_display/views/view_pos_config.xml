<odoo>

    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='pos_iface_customer_facing_display_via_proxy']/.."
                position="before"
            >
                <div class="row">
                    <label
                        string="LED Customer Display"
                        for="pos_iface_customer_display"
                        class="col-lg-4 o_light_label"
                    />
                    <field name="pos_iface_customer_display" />
                </div>
            </xpath>

            <xpath expr="//div[@id='pos_connected_devices_section']" position="inside">

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div class="content-group mt16">
                            <div class="row">
                                <label for="pos_customer_display_message_next" />
                                <field name="pos_customer_display_message_next" />
                            </div>
                            <div class="row">
                                <label for="pos_customer_display_message_closed" />
                                <field name="pos_customer_display_message_closed" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
